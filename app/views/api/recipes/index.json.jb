@recipes.map do |recipe|
  {
    id: recipe.id,
    title: recipe.title,
    directions: recipe.directions_list,
    ingredients: recipe.ingredients_list,
    image_url: recipe.image_url,
    prep_time: recipe.friendly_prep_time,
    chef: recipe.chef,
    created_at: recipe.friendly_created_at
  }
end